<Window x:Class="RSS_UI.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSS_UI"
        mc:Ignorable="d"
        Title="RSS Manager" Height="246" Width="584" SizeToContent="WidthAndHeight">
    <Viewbox Stretch="Uniform">

        <Grid>
            <ContentControl x:Name="myContent"/>
            <DockPanel Grid.Column="0" Width="100">
                
                <Menu DockPanel.Dock="Top" Height="16" Margin="0,0,71,0">
                    <MenuItem Header="_File" Width="30" Height="18">
                        <MenuItem Header="_Open"/>
                        <MenuItem Header="_Save"/>
                    </MenuItem>
                </Menu>
                <StackPanel></StackPanel>
            </DockPanel>
        </Grid>
    </Viewbox>

</Window>
