<Window x:Class="RSS_UI.AddFeedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSS_UI"
        mc:Ignorable="d"
        Title="Add Feed" Height="175" Width="300">
    <Grid>
        <Label Content="Feed Name" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
        <Label Content="Feed URL" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <TextBox Name="FeedName" HorizontalAlignment="Left" Height="23" Margin="100,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox Name="RSSURL" HorizontalAlignment="Left" Height="23" Margin="100,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" KeyDown="AddFeedEnterPressed"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="115,90,0,0" VerticalAlignment="Top" Width="75" Click="AddClick"/>

    </Grid>
</Window>
